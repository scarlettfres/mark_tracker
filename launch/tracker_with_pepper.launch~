<launch>
<!-- ############## launch camera ############ -->
	<include file="$(find axis_cam_modified)/launch/axis_basics.launch"/>
	
<!-- ############## launch tf_init + ar_track_alvar ############ 
# here we use the bash timed_roslaunch.sh to delay the second launchfile 
#otherwise we get negative time of tf published 
-->
	
	<node pkg="mark_tracker" type="timed_roslaunch.sh" 
	args="1 mark_tracker detection_post_calib_axis.launch " 
	name="timed_roslaunch" output="screen">
	</node>


<!-- ############## lien avc le robot ############ -->
	<include file="$(find mark_tracker)/launch/launch_link_robot_mark.launch"/>
	
	<arg name="body_part" default="/HeadTouchFront_frame" />
	<arg name="id_mark" default="2" />
	<node name="link_head_mark" pkg="mark_tracker" type="link_head_mark.py" output="screen" respawn="True" args="$(arg body_part) $(arg id_mark)" /> 
  	<node name="publish_coordinates" pkg="mark_tracker" type="publish_coord.py" output="log" respawn="True" /> 
   
</launch>
